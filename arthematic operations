    public class Arthimatic{
    public static void main(String[] args){
 int n1=10;
        int n2=20;
int sum=n1+n2;
        int div=n2/n1;
 int mul=n1*n2;
        int diff=n2-n1;
 System.out.println("the sum of"+ n1 + " and "+n2 +"is:"+sum);
 System.out.println("the division of"+ n2 +"and"+ n1 +"is:"+div);
 System.out.println("the multiplication of"+ n1 +"and"+ n2 +"is:"+mul);
 System.out.println("the diffn of"+ n1 +"and"+ n2 +"is:"+diff);
   }
}
